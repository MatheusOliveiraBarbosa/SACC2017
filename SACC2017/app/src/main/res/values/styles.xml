<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="standard_text">
        <item name="android:paddingRight">3pt</item>
        <item name="android:paddingLeft">3pt</item>
        <item name="android:paddingTop">5pt</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="standard_header">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:paddingTop">5pt</item>
        <item name="android:paddingRight">3pt</item>
        <item name="android:paddingLeft">3pt</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="standard_body">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingTop">5pt</item>
        <item name="android:paddingRight">3pt</item>
        <item name="android:paddingLeft">3pt</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">bold</item>

    </style>
    
    <style name="text_cards">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

</resources>
